<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context="com.example.mick.Dermetrix.MainActivity"
    android:background="#000000">



    <ImageView
        android:layout_width="640px"
        android:layout_height="640px"
        android:id="@+id/imageView2"
        android:background="@drawable/home_background"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="210px"
        android:layout_height="210px"
        android:id="@+id/imageButton8"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/camerabutton"
        android:onClick="goToTakePictureActivity"/>

    <ImageButton
        android:layout_width="140px"
        android:layout_height="140px"
        android:id="@+id/imageButton9"
        android:background="@drawable/calendarbutton"
        android:onClick="goToCalendarActivity"
        android:layout_alignTop="@+id/imageButton8"
        android:layout_toLeftOf="@+id/imageButton8"
        android:layout_toStartOf="@+id/imageButton8"
        android:layout_marginTop="63dp" />

    <ImageButton
        android:layout_width="140px"
        android:layout_height="140px"
        android:id="@+id/imageButton10"
        android:background="@drawable/photorollbutton"
        android:onClick="goToPhotoRollActivity"
        android:layout_above="@+id/imageButton8"
        android:layout_toLeftOf="@+id/imageButton13"
        android:layout_toStartOf="@+id/imageButton13" />

    <ImageButton
        android:layout_width="140px"
        android:layout_height="140px"
        android:id="@+id/imageButton11"
        android:background="@drawable/graphbutton"
        android:onClick="goToTrackingActivity"
        android:layout_above="@+id/imageButton8"
        android:layout_toRightOf="@+id/imageButton13"
        android:layout_toEndOf="@+id/imageButton13" />

    <ImageButton
        android:layout_width="140px"
        android:layout_height="140px"
        android:id="@+id/imageButton12"
        android:background="@drawable/reminderbutton"
        android:onClick="goToRemindersActivity"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_toRightOf="@+id/imageButton8"
        android:layout_toEndOf="@+id/imageButton8" />

    <ImageButton
        android:layout_width="140px"
        android:layout_height="140px"
        android:id="@+id/imageButton13"
        android:background="@drawable/mapsbutton"
        android:layout_below="@+id/imageButton12"
        android:layout_centerHorizontal="true"
        android:onClick="goToFindTreatmentActivity"/>

    <ImageButton
        android:layout_width="489px"
        android:layout_height="88px"
        android:id="@+id/imageButton14"
        android:background="@drawable/seblogo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/applog"
        android:onClick="goToQuizes"/>


</RelativeLayout>
