<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mick.Dermetrix.Classification">


    <LinearLayout android:layout_weight="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
    </LinearLayout>
    <HorizontalScrollView android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/scrollView">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/score0"
                android:onClick="choose0"
                android:background="@drawable/score0"
                android:layout_margin="10dp"
                android:clickable="true"/>


            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/score1"
                android:onClick="choose1"
                android:background="@drawable/score1"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:clickable="true"/>

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/score2"
                android:onClick="choose2"
                android:background="@drawable/score2"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:clickable="true"/>

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/score3"
                android:onClick="choose3"
                android:background="@drawable/score3"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:clickable="true"/>


            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/score4"
                android:onClick="choose4"
                android:background="@drawable/score4"
                android:layout_margin="10dp"
                android:clickable="true"/>


            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/score5"
                android:onClick="choose5"
                android:background="@drawable/score5"
                android:layout_margin="10dp"
                android:clickable="true"/>

        </LinearLayout>
    </HorizontalScrollView>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/button7"
        android:onClick="saveData"
        android:layout_above="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewScore"
        android:layout_above="@+id/button7"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add Note"
        android:id="@+id/textViewAddNote"
        android:layout_above="@+id/scrollView"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNote"
        android:singleLine="true"
        android:layout_above="@+id/scrollView"
        android:layout_toRightOf="@+id/textViewAddNote"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MyImageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
